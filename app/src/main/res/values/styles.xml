<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="margin_text_button_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/margin_Left_Right</item>
        <item name="android:layout_marginTop">@dimen/margin_Top_Bottom</item>
        <item name="android:layout_marginRight">@dimen/margin_Left_Right</item>
        <item name="android:layout_marginBottom">@dimen/margin_Top_Bottom</item>
    </style>

    <style name="layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="gravity_text_style" parent="margin_text_button_style">
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>